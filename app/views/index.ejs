    <script src="/grupo/controllers/grupo.client.controller.js"></script>
    <script src="/grupo/config/grupo.client.routes.js"></script>
    <script src="/grupo/services/grupo.client.service.js"></script>

    <script src="/nivel/nivel.client.module.js"></script>
    <script src="/nivel/controllers/nivel.client.controller.js"></script>
    <script src="/nivel/config/nivel.client.routes.js"></script>
