    <script src="/local/local.client.module.js"></script>
    <script src="/local/controllers/local.client.controller.js"></script>
    <script src="/local/config/local.client.routes.js"></script>
    <script src="/local/services/local.client.service.js"></script>

    <script src="/prueba/prueba.client.module.js"></script>
    <script src="/prueba/controllers/prueba.client.controller.js"></script>
    <script src="/prueba/config/prueba.client.routes.js"></script>
    <script src="/prueba/services/prueba.client.service.js"></script>
    
    <script src="/search/search.client.module.js"></script>
    <script src="/search/config/search.client.routes.js"></script>
    <script src="/search/services/search.client.service.js"></script>
    <!-- modulos -->
    <script src="/application.js"></script>

</body>

</html>